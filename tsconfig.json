{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noLib": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "typeRoots": [
      "./typings",
      "./node_modules/@types/node"
    ],
    "outDir": "js"
  },
  "type": ["node"],
  "include": [
    "ts/**/*",
    "@types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "js",
    "expected",
    "node_modules",
    "input",
    "output",
    "src"
  ]
}
